{
  "name": "updatorio",
  "version": "1.0.1",
  "description": "CLI tool for updating Factorio mods on the dedicated server.",
  "main": "src/index.ts",
  "bin": "./index.js",
  "scripts": {
    "start": "NODE_ENV=development ts-node src/start.ts",
    "build": "NODE_ENV=production node esbuild.mjs",
    "test-ci": "jest --ci --detectOpenHandles",
    "release:major": "release-it --ci major",
    "release:minor": "release-it --ci minor",
    "release:patch": "release-it --ci patch",
    "release:beta": "release-it --ci minor --preRelease=beta"
  },
  "keywords": [
    "factorio",
    "update",
    "mods"
  ],
  "author": "Aleksandr Petropavlovskikh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Makvagabo/updatorio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Makvagabo/updatorio.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "commander": "^10.0.0",
    "compare-versions": "^6.0.0-rc.1",
    "esbuild-plugin-copy": "^2.1.0",
    "inquirer": "^9.1.4",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@tsconfig/node14": "^1.0.3",
    "@types/jest": "^29.4.0",
    "@types/node": "14",
    "esbuild": "^0.17.11",
    "jest": "^29.5.0",
    "mock-stdin": "^1.0.0",
    "prettier": "2.8.4",
    "release-it": "*",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": ["json-summary"],
    "collectCoverage": true
  },
  "release-it": {
    "npm": {
      "publishPath": "./.publish",
      "skipChecks": true
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ]
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:release": [
        "yarn test-ci",
        "yarn build"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    }
  }
}
