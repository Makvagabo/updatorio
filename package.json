{
  "name": "updatorio",
  "version": "0.3.0",
  "description": "It updates all your mods on the dedicated factorio game server.",
  "main": "src/index.ts",
  "bin": "./index.js",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production node esbuild.mjs",
    "start": "node esbuild.mjs && node .publish/index.js",
    "test": "jest --collect-coverage --detectOpenHandles",
    "release:test": "yarn publish ./.publish --tag $npm_package_version && echo \"Successfully released version $npm_package_version!\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Makvagabo/updatorio.git"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "commander": "^10.0.0",
    "compare-versions": "^6.0.0-rc.1",
    "esbuild-plugin-copy": "^2.1.0",
    "inquirer": "^9.1.4",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/jest": "^29.4.0",
    "@types/node": "14",
    "esbuild": "^0.17.11",
    "jest": "^29.5.0",
    "mock-stdin": "^1.0.0",
    "prettier": "2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
